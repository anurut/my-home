<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/roomIconConstraint"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_gravity="center"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">


    <ImageView
        android:id="@+id/room_icon"
        style="@style/myRoomIcon"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/roomTextView"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/button_icon_layout"
        android:layout_width="@+id/room_icon"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="@+id/room_icon"
        app:layout_constraintStart_toStartOf="@+id/room_icon"
        app:layout_constraintTop_toTopOf="@+id/room_icon">

        <ImageView
            android:id="@+id/button_icon_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/button_icon_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/button_icon_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/button_icon_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>


    <TextView
        android:id="@+id/roomTextView"
        style="@style/buttonTextView"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/room_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>